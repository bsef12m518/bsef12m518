@using TermProject.Models

            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">List of Books</h1>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>

                                        <th>Name</th>
                                        <th>Author</th>
                                        <th>Price</th>
                                        <th>Genre</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        BookStoreEntities5 db = new BookStoreEntities5();

                                        foreach (var b in db.Carts)
                                        {
                                            <tr>
                                                <td>@b.BookName</td>
                                                <td>@b.AuthorName</td>
                                                <td>Rs.@b.Price</td>
                                                <td>@b.Genre</td>
                                                <td>
                                                    <button class="alert-danger" onclick="location.href = '@Url.Action("RemovefromCart", "Home", new { id=@b.Id})'">Remove</button>
                                                </td>

                                            </tr>
                                        
                                        
                                        }
                                        
                                        
                                    }



                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->


                        <button class="alert-success" onclick="location.href = '@Url.Action("ConfirmOrder", "Home")'">Confirm Order</button>
                        <button class="alert-danger" onclick="location.href = '@Url.Action("DismissOrder", "Home")'" >Dismiss Order</button>

                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>

      