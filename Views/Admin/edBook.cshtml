
@model TermProject.Models.BookDetail

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Bootstrap Admin Theme</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Core CSS -->
    <!-- MetisMenu CSS -->
    <link href="~/Content/metisMenu.min.css" rel="stylesheet" />

    <!-- Timeline CSS -->
    <link href="~/Content/timeline.css" rel="stylesheet" />


    <!-- Custom CSS -->
    <link href="~/Content/sb-admin-2.css" rel="stylesheet" />


    <!-- Morris Charts CSS -->
    <link href="../bower_components/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />



</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">E-Book Store</a>
            </div>


            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li>
                            <a href="~/Admin/Index"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Admin/AddAdmin">Add New Admin</a>
                                </li>
                                <li>
                                    <a href="~/Admin/RemoveAdmin">Remove Admin</a>
                                </li>

                            </ul>
                        </li>


                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i>Book Pages<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Admin/AddBook">Add</a>
                                </li>
                                <li>
                                    <a href="~/Admin/RemoveBook">Remove</a>
                                </li>
                                <li>
                                    <a href="~/Admin/ViewBooks">View</a>
                                </li>
                                <li>
                                    <a href="~/Admin/EditBook">Edit</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i>Customer Pages<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="~/Admin/AddCustomer">Add</a>
                                </li>
                                <li>
                                    <a href="~/Admin/RemoveCustomer">Remove</a>
                                </li>
                                <li>
                                    <a href="~/Admin/ViewCustomers">View</a>
                                </li>
                                <li>
                                    <a href="~/Admin/EditCustomer">Edit</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Edit Book</h1>
                   
                    <div>
                        @using (Html.BeginForm("eB", "Admin", FormMethod.Post))
                        {
                            @Html.HiddenFor(b=>b.Id)
                            
                           @Html.LabelFor(b=>b.BookName)
                            @Html.EditorFor(b => b.BookName, new { required = true })
                            <br />
                            
                            @Html.LabelFor(b=>b.AuthorName)
                            @Html.EditorFor(b => b.AuthorName, new { required = true })
                            <br />
                            
                            @Html.LabelFor(b => b.Price)
                            @Html.EditorFor(b => b.Price, new { required = true })
                            <br/>
                            
                            
                              @Html.LabelFor(b=>b.Genre)
                            @Html.EditorFor(b => b.Genre, new { required = true })
                            <br/>
                            
                              @Html.LabelFor(b=>b.Review)
                            @Html.EditorFor(b => b.Review, new { required = true })
                            <br/>
                            
                         
                            <input type="submit" value="Save" />
                        }

                    </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
    </div>

    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="../bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->

    <script src="~/Scripts/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->

    <script src="~/Scripts/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->

    <script src="~/Scripts/js/raphael-min.js"></script>

    <script src="~/Scripts/morris.min.js"></script>
    <script src="~/Scripts/Admin/morris-data.js"></script>


    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/Admin/sb-admin-2.js"></script>


</body>

</html>
