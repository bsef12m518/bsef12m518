
                <div class="col-lg-12">
                    <h1 class="page-header">Customer Pages</h1>
                </div>
                <!-- /.col-lg-12 -->
           
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Sign Up
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form" action="/Customer/CustomerSignUp" method="post">
                                        <div class="form-group">
                                            <div class="text-info" id="checking">Checking..
                                                
                                            </div>
                                            <label>Name</label>
                                            <input class="form-control" placeholder="Enter Name" name="Name" id="Name" required>
                                            <input type="button" id="b1" value="Check Availability for Customer"/>
                                            <div class="text-info bg-danger" id="result" ></div>

                                            @Scripts.Render("~/bundles/jquery")
                                            <script>
                                                $(document).ready(function () {
                                                    $('#checking').hide();
                                                    $('#b1').click(function () {
                                                        var username = $('#Name').val();
                                                        $('#checking').show();
                                                        $.getJSON("/Customer/CheckCustomer?username=" + username, function (data) {
                                                            $('#checking').hide();
                                                            if (data) {
                                                                $('#result').text("Customer already exists");
                                                            }
                                                            else {
                                                                $('#result').text("Customer availability exists");
                                                            }
                                                        });
                                                    });
                                                });
                                            </script>

                                        </div>
                                        <div class="form-group">
                                            <label>Password: </label>
                                            <input class="form-control" placeholder="Enter Password" name="Password" type="password" required>
                                        </div>


                                        <div class="form-group">
                                            <label>Email: </label>
                                            <input class="form-control" placeholder="Enter Email" name="Email" type="email" id="email" required>
                                        </div>

                                        <div class="form-group">
                                            <label>Contact: </label>
                                            <input class="form-control" placeholder="Enter Contact Number" name="Contact" required>
                                        </div>

                                        <div class="form-group">
                                            <label>Address: </label>
                                            <input class="form-control" placeholder="Enter Valid Address" name="Address" required>
                                        </div>

                                        <button type="submit" class="btn btn-default">Sign Up</button>

                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->

                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                   
</div>
</div>